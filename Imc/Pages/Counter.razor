@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @ratao</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment</button>
<button class="btn btn-primary" @onclick="ResetingToZero">Reset Counter</button>

@code {
    private int ratao = 0;

    private void IncrementCount()
    {
        ratao++;
    }

    private void ResetingToZero()
    {
        ratao = 0;
    }
}
